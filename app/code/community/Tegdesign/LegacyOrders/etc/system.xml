<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <tegdesign_legacyorders translate="label" module="tegdesign_legacyorders">
            <label><![CDATA[Legacy Orders]]></label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Legacy Orders</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <legacyorders_enabled>
                            <label>Enable Legacy Order Module</label>
                            <comment><![CDATA[Setting this to yes will show a new tab in the customers account to view any legacy orders imported. Only enable if needed for migration purposes. This is disabled by default.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                    
                        </legacyorders_enabled>
                        <order_history_text>
                            <label>My Account Order History Subtext</label>
                            <comment><![CDATA[Text/HTML to add to the My Account Order History Page. Note: You might want to include a message stating that your orders prior to XX/XX/XXXX date can be found by clicking here.<br><strong>Example:</strong><br><pre>&lt;a href=&quot;/order_history/abc&quot;&gt;click here&lt;/a&gt;</pre>]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                    
                        </order_history_text>
                        <legacy_order_history_text>
                            <label>Legacy Order Page Subtext</label>
                            <comment><![CDATA[Text/HTML to add to the Legacy Order History Page. Note: You might want to include a message stating that orders place after XX/XX/XXXX date can be found by clicking here.<br><strong>Example:</strong><br><pre>&lt;a href=&quot;/order_history/abc&quot;&gt;click here&lt;/a&gt;</pre>]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                    
                        </legacy_order_history_text>
                    </fields>
                </settings>
            </groups>
        </tegdesign_legacyorders>
    </sections>
</config>